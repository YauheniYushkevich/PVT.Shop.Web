@model PVT.Shop.Infrastructure.Common.ViewModels.LoginUserViewModel

@if (ViewBag.AuthenticationFailedMessage == true)
{
    <div class="alert alert-danger">
        <strong> Your login or password is incorrect! </strong>
    </div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "navbar_login__form" }))
{
    <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username", type = "text" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <button type="submit" class="btn btn-success btn-sm">Sign In</button>
            @Html.ActionLink("Sign Up", "RegistrationUser", "User", null, new { @class = "btn btn-primary btn-sm pull-right" })
        </div>
}